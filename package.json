{
  "name": "meme-trader",
  "version": "0.0.1",
  "private": true,
  "description": "Meme stocks momentum trading bot for Kucoin exchange",
  "repository": "https://github.com/rylorin/meme-trader.git",
  "license": "Licensed",
  "author": "Ronan-Yann Lorin <ryl@free.fr>",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:kucoin-node-sdk": "cd ./node_modules/kucoin-node-sdk",
    "clean": "rm -rf build",
    "postinstall": "patch-package && yarn build:kucoin-node-sdk",
    "lint": "eslint . --ext .ts,.tsx",
    "prepublishOnly": "yarn build",
    "qc": "yarn lint && yarn type-check && prettier --check .",
    "start": "NODE_ENV=production node build/index.js",
    "start:dev": "NODE_ENV=development ts-node-dev --project tsconfig.json src/index",
    "test": "yarn qc",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@rylorin/technicalindicators": "^3.1.22",
    "config": "^3.3.11",
    "dotenv": "^16.3.1",
    "json-stringify-safe": "^5.0.1",
    "kucoin-node-sdk": "Kucoin/kucoin-node-sdk#68aaa4e77e9fe97bb0fd42964cb9edf8229cf138",
    "telegraf": "^4.16.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/config": "^3.3.3",
    "@types/json-stringify-safe": "^5.0.1",
    "@types/node": "^20.11.28",
    "@types/uuid": "^9.0.2",
    "@types/validator": "^13.11.8",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-rxjs": "^5.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "patch-package": "^8.0.0",
    "prettier": "^3.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": "^20.11.1"
  }
}
