  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Bot",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["--trace-warnings"],
      "program": "${workspaceFolder}/dist/index.js",
      "args": [
        "-watch",
        "-log=warn",
        "-host=127.0.0.1",
        // "-clientId=0",
        "-csp"
      ],
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
